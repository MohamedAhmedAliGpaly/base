.tabar_body{user-select: none; position: fixed; z-index: 1; display: flex; bottom: 0; width: 100%; height: 48px; background-color: #FFF; box-shadow: 0 0 2px rgba(0,0,0,.1);}
.tabar_item{display: flex; flex: 1; flex-direction: column; align-items: center; justify-content: center;}
.tabar_item .icons{color: #999; font-size: 24px;}
.tabar_item .icon_chart{font-size: 22px;}
.tabar_item .icon_code{font-size: 24px;}
.tabar_item .icon_home{font-size: 28px;}

.tabar_item .name{font-size: 10px; padding-top: 2px; color: #999;}
.tabar_item_active{color: #6FB737;}
.tabar_item_active .icons{color: #6FB737;}
.tabar_item_active .name{color: #6FB737;}
/* 红点 */
.tabar_body .redNum{margin: -20px 0 0 18px;}
/* 首页 */
.tabar_index{position: absolute; width: 50px; height: 50px; line-height: 50px; margin-top: -10px; text-align: center; border-radius: 50%;}
.tabar_index{border: #F2F2F2 1px solid; background-color: #FFF; box-shadow: 0 0 3px rgba(0,0,0,.1);}
.tabar_index .icon_home{color: #999;}
.tabar_item_active .tabar_index{border: #FFF 1px solid; background-color: #6FB737;}
.tabar_item_active .icon_home{color: #FFF;}